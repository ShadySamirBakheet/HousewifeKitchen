<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.home.MainActivity">

    <ImageView
        android:id="@+id/startImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="16dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/txtColor1"
        android:layout_below="@id/startImg"
        android:layout_centerHorizontal="true"
        android:padding="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome on Chief Home that allow to buy food made by chief work on his house"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginHorizontal="48dp"
        android:textColor="@color/txtColor4"
        android:layout_below="@id/welcome"
        android:layout_centerHorizontal="true"
        android:padding="16dp"/>

</RelativeLayout>