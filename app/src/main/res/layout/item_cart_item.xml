<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin=".2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardBackgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCon"
            android:layout_width="80dp"
            app:contentPadding="2dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image3"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_toEndOf="@id/imgCon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/countCon"
            android:orientation="vertical"
            android:paddingHorizontal="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Ffood Name"
                android:textColor="@color/txtColor1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp"
                android:text="Orders content  "
                android:textColor="@color/txtColor4"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp"
                android:text="55$"
                android:textColor="@color/txtColor5"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/countCon"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/removeOne"
                app:cardBackgroundColor="@color/txtColor4"
                android:layout_width="20dp"
                android:layout_margin="8dp"
                android:layout_height="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:src="@drawable/ic_remove_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:text="1"
                android:textSize="16dp"
                android:textColor="@color/txtColor4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/addOne"
                app:cardBackgroundColor="@color/txtColor4"
                android:layout_width="20dp"
                android:layout_margin="8dp"
                android:layout_height="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:src="@drawable/ic_add_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>